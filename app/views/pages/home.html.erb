<div class="container">

<h1>My dashboard</h1>
<%= link_to "Sass Components", sass_home_path %>
<%= link_to "Create New Event", new_event_path %>

  <div class="dashboard d-flex">
    <div class="dashboard-card">
      <div class="card">
          <h2>events</h4>
          <p><%= link_to new_event_path do%></p>
              <p><i class="fa-solid fa-circle-plus"></i></p>
          <% end %>
          <%= form_with url: "/search", method: :get do |form| %>
            <%= form.text_field :query, class: "input" %>
          <% end %>
          <% @events.each do |event| %>
          <div class="event-card">
            <div class="card-content">
              <%= cl_image_tag event.photo.key, height: 200, width: 200, crop: :fill %>
              <div class="event-content">
                <h5><%= link_to event.name, event_path(event) %></h5>
                <p><i class="fa-solid fa-calendar-days"></i> <%= event.start_date.strftime("%d %B %Y") %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      </div>
  </div>

    <div class="dashboard-card">
      <div class="card">
          <h2>tasks</h4>
          <p><%= link_to new_event_path do%></p>
              <p><i class="fa-solid fa-circle-plus"></i></p>
          <% end %>
          <%= form_with url: "/search", method: :get do |form| %>
            <%= form.text_field :query, class: "input" %>
          <% end %>
          <div class="todo-card">
            <div class="card-content">
              <div class="event-content">
                <h5>Monday</h5>
              </div>
            </div>
          </div>
      </div>
    </div>
</div>
