<div class="container-standard">
  <h1 class="page-title">My dashboard</h1>
  <div class="event-dashboard">
    <div class="dashboard-card" id="dashboard-card-events">
      <h2>events</h2>
      <div style="width: 100%">
        <%= form_with method: :get, class: "search" do %>
          <%= text_field_tag :query,
            params[:query],
            class: "search-bar",
            placeholder: "Search..."
          %>
        <% end %>
      </div>
      <div class="scroll" style="width: 100%">
        <% @events.each do |event| %>
          <%= link_to event_path(event), style: "width: 100%" do %>
            <div id="my-dashboard-event-card">
              <div class="event-card-image">
                <% if event.photo.attached?  %>
                  <%= cl_image_tag event.photo.key, class:"event-card-image"%>
                <% end %>
              </div>
              <div class="event-card-content">
                <h5> <%= event.name %></h5>
                <p><%= event.start_date.strftime("%d %B %Y") %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="dashboard-card">
      <h2>tasks</h2>
      <div class="scroll" style="width: 100%">
        <% if @grouped_tasks.empty? %>
          <div class="todo-card">
            <p> You have no tasks!!! </p>
          </div>
        <% else %>
          <% @grouped_tasks.each do |day, tasks| %>
            <div class="todo-card">
              <h5 class="mb-3"><%=day%></h5>
              <ul>
                <% tasks.each do |task|%>
                  <li><em><%=(task.event.name)%></em> - <%= task.name.capitalize%></li>
                <% end %>
              </ul>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="calendar-notes">
      <div class="dashboard-card">
        <h2>calendar</h2>
        <div class="todo-card">
          <%= month_calendar(attribute: :start_date, events: @events) do |date, events| %>
            <%= date.day %>
            <% events.each do |event| %>
              <div>
                <%= event.name %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="dashboard-card scroll" id="">
        <h2>notes</h2>
        <div class="todo-card">
          <% @notes.each do |note| %>
            <div class="underline" >
              <ul>
                <li><em><%= note.content%></em></li>
              </ul>
            </div>
          <% end %>
          <div class="mt-4 width ">
          <%= simple_form_for(@note) do |f| %>
          <strong>  <%= f.input :content %> </strong>
            <%= f.button :button, "Add Note", class:"btn-action" %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
