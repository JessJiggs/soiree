<div id="message-<%= message.id %>" class="message">
  <img src="<%= message.user.photo.key %>" class="avatar" alt="<%= message.user.first_name %>">
  <div class="details">
    <div class="meta">
      <span class="name"><%= message.user.first_name %></span>
      <span class="time"><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></span>
    </div>
    <div class="content">
      <p><%= message.content %></p>
    </div>
  </div>
</div>
