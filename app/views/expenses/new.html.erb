<div class="container mt-5">
  <h1>New expense</h1>

  <!-- app/views/restaurants/new.html.erb -->
<%= simple_form_for [ @event, @expense] do |f| %>
<div class="form-group">

  <%= f.input :name, class: 'form-control' %>
  </div>
  <div class="form-group">

  <%= f.input :amount_spent, class: 'form-control' %>
  </div>
  <%= f.submit class: 'btn btn-primary mt-3' %>
<% end %>

  <hr>
  <%= link_to event_expenses_path(@event) do %>
    <i class="fa-solid fa-arrow-rotate-left"></i> Back to list
  <% end %>
</div>
