<div class="container mt-10">
  <h1>My expenses</h1>

  <%= link_to "Go back to events", event_path(@event) %>

  <ul id="expenses">
    <% @expenses.each do |e| %>
      <li>
        <%=  e.name %>
        <%=  e.amount_spent %>
      </li>
    <% end %>
  </ul>
  <%= pie_chart @expenses.group(:name ).count, donut: true %>

  <%= link_to "New expense", new_event_expense_path(@event) %>
</div>
