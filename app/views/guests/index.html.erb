
<div class="container">
  <h1>Guests</h1>

    <div>
      <% @guests.each do |guest| %>
        <p>Name <%= guest.first_name %></p>
        <p>Surname <%= guest.last_name %></p>
        <p>Invite Status <%= guest.invite_status %></p>
        <p>RSVP Status <%= guest.rsvp_status %></p>
      <% end %>
    </div>

  <h1>Add New</h1>
    <div>
      <%= simple_form_for [@event, @guest] do |f| %>
      <%= f.input :first_name, label: "First Name" %>
      <%= f.input :last_name, label: "Last Name" %>
      <%= f.input :email_address, label: "Email" %>
      <%= f.input :phone_number, label: "Phone number" %>
      <%= f.input :invite_status, label: "Invite Sent?" %>
      <%= f.input :rsvp_status, label: "RSVP" %>
      <%= f.button :submit, class:"btn btn-secondary" %>
      <% end %>
    </div>

</div>
